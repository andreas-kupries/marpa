grammar {
    event {
        fox on
        wolf on
    }
    global {
        start A
        inaccessible warn
    }
    g1 {
        {} {
            A { {priority fox 0
                    action {array values}
                    assoc left
                    mask 0} }
        }
        terminal {
            fox { terminal }
        }
    }
    lexeme {
        action {array values}
    }
    l0 {
        discard {
            bar { {priority @CHR:<b> 0} }
            foo { {priority @CHR:<a> 0} }
        }
        latm {
            fox 1
        }
        lexeme {
            fox { {priority @CHR:<x> 0} }
        }
        literal {
            @CHR:<a> { {byte 97} }
            @CHR:<b> { {byte 98} }
            @CHR:<x> { {byte 120} }
        }
        trigger {
            bar {
                discard wolf
            }
            foo {
                discard fox
            }
        }
    }
}