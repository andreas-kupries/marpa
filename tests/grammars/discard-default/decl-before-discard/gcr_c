grammar {
    event {
        gone on
    }
    global {
        start A
        inaccessible warn
    }
    g1 {
        {} {
            A { {priority foo 0
                    action {array values}
                    assoc left
                    mask 0} }
        }
        terminal {
            foo { terminal }
        }
    }
    lexeme {
        action {array values}
    }
    l0 {
        discard {
            fox { {priority @CHR:<x> 0} }
        }
        latm {
            foo 1
        }
        lexeme {
            foo { {priority @CHR:<a> 0} }
        }
        literal {
            @CHR:<a> { {byte 97} }
            @CHR:<x> { {byte 120} }
        }
        trigger {
            fox {
                discard gone
            }
        }
    }
}