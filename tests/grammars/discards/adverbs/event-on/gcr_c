grammar {
    event {
        snafu on
    }
    global {
        start B
        inaccessible warn
    }
    g1 {
        {} {
            B { {priority C 0
                    action {array values}
                    assoc left
                    mask 0} }
        }
        terminal {
            C { terminal }
        }
    }
    lexeme {
        action {array values}
    }
    l0 {
        discard {
            A { {priority @CHR:<a> 0} }
        }
        latm {
            C 1
        }
        lexeme {
            C { {priority @CHR:<c> 0} }
        }
        literal {
            @CHR:<a> { {byte 97} }
            @CHR:<c> { {byte 99} }
        }
        trigger {
            A {
                discard snafu
            }
        }
    }
}