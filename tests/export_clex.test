##  [ok] container

# # ## ### ##### ######## ############# #####################
## container - state driven export

test marpa-export-clex-critcl-container-1.0 {container, wrong args, not enough} -body {
    marpa::export::clex-critcl container
} -returnCodes error -result {wrong # args: should be "marpa::export::clex-critcl container gc"}

test marpa-export-clex-critcl-container-1.1 {container, wrong args, too many} -body {
    marpa::export::clex-critcl container GC X
} -returnCodes error -result {wrong # args: should be "marpa::export::clex-critcl container gc"}

# # ## ### ##### ######## ############# #####################

set max 0
test-grammar-files export_clex --> __ __ { incr max }
set format %0[string length $max]d
unset max

set k 0
test-grammar-map export_clex --> id export base {
    set input    [string trimright [fget $base/gcstate]]
    set kd       [format $format $k]
    set expected [test-grammar-result $base export_clex]

    test marpa-export-clex-critcl-2.${kd}---${id} "export clex-critcl $id" -setup {
	marpa::export config! version  <Version>
	marpa::export config! writer   <Writer>
	marpa::export config! year     <Year>
	marpa::export config! name     <Name>
	marpa::export config! operator <Operator>
	marpa::export config! tool     <Tool>
	marpa::export config! gentime  <GenerationTime>
	marpa::slif::container create GC
	GC deserialize [dict get $input grammar]
	GC validate ;# Deserialize should create only valid
		     # containers, if serialization is from a valid
		     # container.
    } -body {
	marpa::export::clex-critcl container GC
    } -cleanup {
	GC destroy
	marpa::export config-reset
    } -result $expected

    incr k
}

