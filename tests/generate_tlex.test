## container - state driven generators

test marpa-gen-format-tlex-container-1.0 {container, wrong args, not enough} -body {
    marpa::gen::format::tlex container
} -returnCodes error -result {wrong # args: should be "marpa::gen::format::tlex container gc"}

test marpa-gen-format-tlex-container-1.1 {container, wrong args, too many} -body {
    marpa::gen::format::tlex container GC X
} -returnCodes error -result {wrong # args: should be "marpa::gen::format::tlex container gc"}

# # ## ### ##### ######## ############# #####################

test-grammar-file-format ID generated_tlex

test-grammar-map generated_tlex --> k id gen base {
    test marpa-gen-format-tlex-2.[ID $k]---${id} "gen tlex $id" -setup {
	g-std-config
	marpa::slif::container create GC
	GC deserialize [g-extract [fget $base/gcstate]]
	GC validate ;# Deserialize should create only valid
		     # containers, if serialization is from a valid
		     # container.
    } -body {
	marpa::gen::format::tlex container GC
    } -cleanup {
	GC destroy
	marpa::gen config-reset
    } -result [test-grammar-result $base generated_tlex]
}

