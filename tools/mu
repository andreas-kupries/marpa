#!/usr/bin/env tclsh
# -*- tcl -*-

proc F {x} {
    #format %8d $x
    set x [expr {double($x) / (1024*1024)}]
    format %5.2f $x
}

proc memuse {label alloc max} {
    global pa pm
    if {[catch {
	set da [expr {$alloc - $pa}]
	set dm [expr {$max - $pm}]
	puts "memuse\t$label\t[F $alloc]\t[F $max]\t[F $da]\t[F $dm]"
    }]} {
	puts "memuse\t$label\t[F $alloc]\t[F $max]"
    }
    set pa $alloc
    set pm $max
    return
}

eval [read stdin]
